@model AspNetMartenHtmxVsa.Features.Account.Manage.GenerateRecoveryCode.DisplayRecoveryCodesViewModel
@{
  ViewData["Title"] = "Your recovery codes:";
}

<h1>@ViewData["Title"].</h1>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
  <h4>Here are your new recovery codes</h4>
  <hr/>
  <dl class="dl-horizontal">
    <dt>Codes:</dt>
    @foreach (var recoveryCode in Model.Codes)
    {
      <dd>
        <text>@recoveryCode</text>
      </dd>
    }
  </dl>
</div>
