@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AspNetMartenHtmxVsa.Features.Account.Manage.VerifyPhoneNumber.VerifyPhoneNumberViewModel
@{
  ViewData["Title"] = "Verify Phone Number";
}

<h1>@ViewData["Title"].</h1>

<form asp-action="VerifyPhoneNumber"
      asp-controller="VerifyPhoneNumber"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      class="form-horizontal"
      method="post"
      role="form">
  <input asp-for="PhoneNumber"
         type="hidden"/>
  <h4>Add a phone number.</h4>
  <h5>@ViewData["Status"]</h5>
  <hr/>
  <div asp-validation-summary="ModelOnly"
       class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Code"
           class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="Code"
             class="form-control"/>
      <span asp-validation-for="Code"
            class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button class="btn btn-default"
              type="submit">Submit</button>
    </div>
  </div>
</form>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
